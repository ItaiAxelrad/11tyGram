---
title: Comments
layout: base.njk
eleventyExcludeFromCollections: true
permalink: "comments/page-{{ pagination.pageNumber + 1}}/index.html"
pagination:
  data: comments.media_comments
  size: 50
  alias: comments
---

<div class="{{ title | lower }}">
{%- for comment in comments %}
  <div class="comment">
    <small>{{ comment[2] }} commented on <time datetime="{{ comment[0] | htmlDateString }}">{{ comment[0] | readableDate}}</time>
    </small>
    <blockquote>{{ comment[1] }}</blockquote>
  </div>
{%- endfor %}
</div>

<nav class="pageNav">
  <div class="previous-page">
    {%- if pagination.href.previous %}
      <a href="{{ pagination.href.previous }}">
       &larr; Previous Page</a>
    {%- else %}
      <a href="/">&larr; Go Back</a>
    {%- endif %}
  </div>
  <div class="next-page">
    {%- if pagination.href.next %}
      <a href="{{ pagination.href.next }}">Next Page &rarr;
  </a>
      {%- else %}
      {%- endif %}
    </div>
  </nav>