---
title: Home
layout: base.njk
permalink: index.html
---

<header>
  <img src="/images/avatar.jpg" class="avatar">
    <div>
      <div class="user">
        <h1 class="user-name">{{- profile.username }}</h1><a href="/feed.xml" class="btn">Follow</a>
      </div>
      <nav>
        <a href="/"><strong>{{ media.photos | length }}</strong> posts</a>
        <a href="/followers/page-1"><strong>{{ connections.followers | length }}</strong> followers</a>
        <a href="/following/page-1"><strong>{{ connections.following | length }}</strong> following</a>
      </nav>
      <p><strong>{{- profile.name }}</strong><br>
      {{ profile.biography }}<br>
      <a href="{{ profile.website | url }}">{{ profile.website }}</a>
      </p>
    </div>
</header>

<article class="posts">

  {# video posts #}
  {%- for video in media.videos %}
    <a href="/videos/{{ loop.index }}/" class="post-link">
      <video preload="metadata" height="100%" class="thumbnail">
          <source src="/{{ video.path }}" type="video/webm">
          Sorry, your browser doesn't support embedded videos.
      </video>
      <div class="overlay">
        <div class="overlay-text">{{ video.taken_at | readableDate }}</div>
      </div>
    </a>
  {%- endfor %}

  {# photo posts #}
  {%- for photo in media.photos %}
  <a href="/posts/{{ loop.index }}/" class="post-link">
      <img src="{{ photo.path }}" loading="lazy" class="thumbnail" alt="{{ photo.caption | truncate(20, true, "") }}">
      <div class="overlay">
        <div class="overlay-text">{{ photo.taken_at | readableDate }}</div>
      </div>
  </a>
  {%- endfor %}

</article>