---
title: Following
layout: base.njk
eleventyExcludeFromCollections: true
permalink: "following/page-{{ pagination.pageNumber + 1}}/index.html"
pagination:
  data: connections.following
  size: 120
  alias: following
---

<div id="{{ title | lower }}">
  <ul class="{{ title | lower }}">
  {%- for follow in following %}
    <li class="follow">
      <a href="https://www.instagram.com/{{ follow }}/?hl=en" rel="noopener">@{{ follow }}</a>
    </li>
  {% endfor -%}
  </ul>
</div>

<nav class="pageNav">
  <div class="previous-page">
    {%- if pagination.href.previous %}
      <a href="{{ pagination.href.previous }}">
       &larr; Previous Page</a>
    {%- else %}
      <a href="/">&larr; Go Back</a>
    {%- endif %}
  </div>
  <div class="next-page">
    {%- if pagination.href.next %}
      <a href="{{ pagination.href.next }}">Next Page &rarr;
  </a>
      {%- else %}
      {%- endif %}
    </div>
  </nav>